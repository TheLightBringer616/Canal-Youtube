@jit
def random_walker_2d(walkers, steps):

    walkers = int(walkers)
    steps = int(steps)
    
    T = [i for i in range(steps + 1)]
    
    random_walks = []
    for j in range(walkers):
    
        X = [0]*(steps+1)
        Y = [0]*(steps+1)
        
        for i in range(steps):
            X_rand = random.uniform(0, 1) - 0.5
            X_rand /= abs(X_rand)
    
            Y_rand = random.uniform(0, 1) - 0.5
            Y_rand /= abs(Y_rand)
        
            X[i+1] = X[i] + X_rand
            Y[i+1] = Y[i] + Y_rand
        
        random_walks.append([X, Y])

    return random_walks


